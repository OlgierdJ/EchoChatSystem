@using CoreLib.Entities.EchoCore.AccountCore
@using MudBlazor
@*
    Layout for the Scrollable list that exists within the directmessagesviewcomponent.

    This component holds all chats and allows the user to search within the chats to filter them.

    Clicking chats within this component should call for parent navigation to the chatviewcomponent.
*@
@* <h3>ChatListComponent</h3> *@
    <MudPaper Width="280px" Square Style="background: var(--mud-palette-surface);">
            <MudText Class="px-5 py-2">Friends</MudText>
            <MudList Clickable="true">
            @foreach (var c in accounts.OrderBy(e => e.Name))
            {
                <MudListItem Dense="true" OnClick="@GoToFriends">
                    <MudAvatar>
                        <MudImage Src="@c.Profile.AvatarFileURL" />
                    </MudAvatar>
                    <MudText Typo="Typo.caption">@c.Name</MudText>
                </MudListItem>
            }
            <MudListItem Dense="true">
                <MudAvatar>
                    <MudIcon Icon="@Icons.Material.Filled.Groups" />
                </MudAvatar>
                <MudText Typo="Typo.caption">Holy Cow Group</MudText>
            </MudListItem>
        </MudList>
    </MudPaper>
